<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="progress_unreach_color" format="color"/>
    <attr name="progress_unreach_height" format="dimension"/>
    <attr name="progress_reach_color" format="color"/>
    <attr name="progress_reach_height" format="dimension"/>
    <attr name="progress_text_color" format="color"/>
    <attr name="progress_text_size" format="dimension"/>

    <declare-styleable name="RainbowBar">
        <!--每一条实线的宽度-->
        <attr name="rainbow_dashWidth" format="dimension"/>
        <!--实线间隔-->
        <attr name="rainbow_dashGap" format="dimension"/>
        <!--bar颜色-->
        <attr name="rainbow_color" format="color"/>
        <!--bar高度-->
        <attr name="rainbow_Height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TasksCompletedView">
        <!--实心圆的半径-->
        <attr name="task_radius" format="dimension"/>
        <!--实心圆的颜色-->
        <attr name="task_color" format="color"/>
        <!--外部圆环的颜色-->
        <attr name="task_ring_color" format="color"/>
        <!--文字颜色-->
        <attr name="task_text_color" format="color"/>
        <!--文字大小-->
        <attr name="task_text_size" format="dimension"/>
    </declare-styleable>




    <declare-styleable name="LineProgressBar">
        <attr name="progress_unreach_color"/>
        <attr name="progress_unreach_height"/>
        <attr name="progress_reach_color"/>
        <attr name="progress_reach_height" />
        <attr name="progress_text_color"/>
        <attr name="progress_text_size" />
        <!--进度两边的offset-->
        <attr name="progress_text_offset" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RoundProgressBar">
        <attr name="progress_unreach_color"/>
        <attr name="progress_unreach_height"/>
        <attr name="progress_reach_color"/>
        <attr name="progress_reach_height" />
        <attr name="progress_text_color"/>
        <attr name="progress_text_size" />
        <attr name="radius" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="RoundProgressBar01">
        <attr name="ring_unreach_color" format="color"/>
        <attr name="ring_reach_color" format="color"/>
        <attr name="ring_width" format="dimension"/>
        <attr name="text_color" format="color"/>
        <attr name="text_size" format="dimension"/>
    </declare-styleable>
</resources>